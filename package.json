{
  "name": "@earle-poole/scaffoldit",
  "version": "1.0.5",
  "main": "./dist/index",
  "types": "./dist/index",
  "description": "Scaffoldit is a CLI tool to scaffold React components and pages",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "typescript": "5.0.2"
  },
  "scripts": {
    "prepublish": "tsc-esm",
    "test-ts": "ts-node --experimental-specifier-resolution=node index.ts src/components/organisms Accordion",
    "test-js": "ts-node --experimental-specifier-resolution=node index.ts src/components/atoms Button -nts",
    "scaffoldit": "ts-node --experimental-specifier-resolution=node index.ts"
  },
  "devDependencies": {
    "@digitak/tsc-esm": "^3.1.4",
    "@types/node": "^18.14.0",
    "ts-node": "^10.9.1"
  },
  "bin": {
    "scaffoldit": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Earle-Poole/scaffoldit.git"
  },
  "bugs": {
    "url": "https://github.com/Earle-Poole/scaffoldit/issues"
  }
}
