{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"],
  "ts-node": { "esm": true },
  "include": ["*.ts", "*.tsx", "*.js", "*.jsx"]
}
